<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/building_helper/ColorPicker.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/building_helper/ColorPicker.js" />
  </scripts>
  <Panel hittest="false" class="ColorPicker">
    <Panel class="GradientPanel" id="GradientPanel" hittest="true" onmouseover="OnHoverGradientPanel()" onmouseout="OnLeaveGradientPanel()">
      <Panel class="GradientMarker" id="GradientMarker" />
      <Panel class="Gradient" id="Gradient" />
    </Panel>
    <Panel class="ColorField" id="MainColor" hittest="true" onmouseover="OnHoverMainColor()" onmouseout="OnLeaveMainColor()">
      <Panel class="Marker" id="Marker" />
      <Panel class="WhiteGradient" />
      <Panel class="BlackGradient" />
    </Panel> 
  </Panel> 
</root> 