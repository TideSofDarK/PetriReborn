<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/abilities_container.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/abilities/abilities_container.js" />
		<include src="file://{resources}/scripts/custom_game/abilities/hide_panels.js" />			
	</scripts>
	<Panel hittest="false" class="ResourcesAndAbilities">

		<!--<DOTAScenePanel id="Scene" />-->
		<Panel id="AbilityCost" >
	      	<Label text="0" class="GoldText" id="GoldText">
		    	<Image src="file://{images}/custom_game/custom_variables/gold.png" />
		    </Label>
		    <Label text="0" class="LumberText" id="LumberText">
		    	<Image src="file://{images}/custom_game/custom_variables/lumber.png" />
		    </Label>
		    <Label text="0" class="FoodText" id="FoodText">
		        <Image src="file://{images}/custom_game/custom_variables/food.png" />
		    </Label>
		</Panel>

		<Button id="LevelUpButton" onactivate="OnLevelUpClicked()">
			<Panel id="LevelUpButtonInset">
				<Label text="#LevelUp" />
			</Panel>
		</Button>

		<Panel id="ability_list" />
	  	
	  	<Panel hittest="false" class="TotalResources" id="TotalResources">
	    	<Panel hittest="false" class="LumberBase" id="ResourcePanel">
		      	<Label text="" class="TotalGoldText" id="TotalGoldText">
		        	<Image src="file://{images}/custom_game/custom_variables/gold.png" />
		      	</Label>
		      	<Label text="" class="TotalLumberText" id="TotalLumberText">
		        	<Image src="file://{images}/custom_game/custom_variables/lumber.png" />
		      	</Label>
		      	<Label text="" class="TotalFoodText" id="TotalFoodText">
	    			<Image src="file://{images}/custom_game/custom_variables/food.png" />
		    	</Label>
		    </Panel>
	  	</Panel>		
	</Panel>
</root>

